<h3>TEAM</h3>
<% @members.each do |member| %>
<div class="tm_member">
  <div class="tm_desc_wrap">
    <h5 class="tm_member_h5">
      <span class="member-name"><%= member.name %></span>, <%= member.title %>
    </h5>
    <div style="margin-top:-20px">
    <%= raw member.bio %>
    </div>
    <% if current_admin %>
      <p>
      <%= link_to 'Edit', edit_member_path(member) %>
      <br />
      <%= link_to 'Destroy', member, confirm: 'Are you sure?', method: :delete %>
      </p>
    <% end %>
  </div>
</div>
<% end %>
<br />

<% if current_admin %>
  <div style="clear:both; width:100%;">
  <p>
<%= link_to 'New Member', new_member_path %>
  </p>
</div>
<% end %>
